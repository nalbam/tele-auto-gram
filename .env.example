# Telegram API Credentials
# Get these from https://my.telegram.org
API_ID=
API_HASH=

# Your phone number with country code
PHONE=

# Optional: Custom auto-response message (used as fallback when AI is not configured)
AUTO_RESPONSE_MESSAGE="I will get back to you shortly. Please wait a moment."

# Optional: OpenAI API settings for AI-powered responses
OPENAI_API_KEY=
OPENAI_MODEL="gpt-4o-mini"

# Optional: Response delay range in seconds (default: 3 ~ 10)
RESPONSE_DELAY_MIN=3
RESPONSE_DELAY_MAX=10

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL="INFO"

# Optional: Web UI bind address (default: 0.0.0.0)
HOST="0.0.0.0"

# Optional: Web UI port (default: 5000)
PORT=5000

# Optional: Web API authentication token (if set, all /api/* requests require Bearer token)
WEB_TOKEN=

# Optional: Flask secret key (auto-generated if not set)
SECRET_KEY=
